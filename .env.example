# TraceGuard Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for CVE analysis)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o

# NVD API Key (optional, increases rate limits from 5 to 50 requests/30s)
# Get one at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=

# GitHub Token (required for GitHub Advisory API)
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=

# Database URL (default: SQLite)
DATABASE_URL=sqlite+aiosqlite:///./traceguard.db

# Debug mode
DEBUG=false
LOG_LEVEL=INFO

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# Streamlit UI
STREAMLIT_PORT=8501
